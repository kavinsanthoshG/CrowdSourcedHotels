<%-layout('layout/boilerPlate') -%>



<div class="container">
  <h1 class="text-center mb-3">All Hotels</h1>
  <div class="mb-4"id="map" style="height: 500px; width: 100%;"></div>
<% for (let hotel of hotels) { %>
  <div class="card mb-3" >
    <div class="row">
      <div class="col-md-4">
        <% if (hotel.image && hotel.image.length > 0) { %>
          <img crossorigin="anonymous" class="img-fluid" alt="Image of a Hotel" src="<%= hotel.image[0].url %>">
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
            <%= hotel.title %>
          </h5>
          <p class="card-text"><%= hotel.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= hotel.location %></small>
          </p>
          <a class="btn btn-primary" href="/hotels/<%= hotel._id %>"><%= hotel.title %></a>
        </div>
      </div>
    </div>
  </div>
  <% } %>

</div>
  

<script >const mapToken='<%=process.env.MAPBOX_TOKEN%>'
const hotels={features:<%-JSON.stringify(hotels)%>}
</script>                                             

